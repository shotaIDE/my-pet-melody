{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "asdf",
    "gradle-wrapper",
    "pyenv",
    "ruby-version",
    "terraform",
    "terraform-version"
  ],
  "labels": ["dependencies"],
  "semanticCommitType": "build",
  "packageRules": [
    {
      "matchManagers": ["asdf"],
      "addLabels": ["flutter"],
      "automerge": true
    },
    {
      "matchManagers": ["gradle-wrapper"],
      "addLabels": ["gradle"],
      "automerge": true
    },
    {
      "matchManagers": ["pyenv"],
      "addLabels": ["python"],
      "automerge": true
    },
    {
      "matchManagers": ["ruby-version"],
      "addLabels": ["ruby"],
      "automerge": true
    },
    {
      "matchManagers": ["terraform", "terraform-version"],
      "addLabels": ["terraform"],
      "automerge": true
    }
  ]
}
